{
  "name": "shellx-terminal",
  "version": "2.0.0",
  "description": "A modern, modular terminal with custom commands, layered architecture, and multi-modal output",
  "module": "src/main.ts",
  "main": "src/main.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/main.ts",
    "dev": "bun --watch src/main.ts",
    "build": "bun build src/main.ts --outdir dist",
    "type-check": "tsc --noEmit",
    "test": "bun run test.ts"
  },
  "keywords": [
    "terminal",
    "cli",
    "typescript",
    "bun",
    "modular",
    "interactive"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.6.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
